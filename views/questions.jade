extends layout

block content 
	.container
		.row
			.col-md-2
			.col-md-8
				form#setQuestion(action="/course/questions" method="POST")
					.form-group
						label Question
						input#question.form-control(type='text', name='question' required)
					.form-group.form-inline
						label Level
						select#level.form-control(name='level' required)
							option(value='1') 1
							option(value='2') 2
							option(value='3') 3
					.form-group.form-inline
						label Option 1
						input#option1.form-control.option(type='text', name='option1' required)
						label Option 2
						input#option2.form-control.option(type='text', name='option2' required)
					.form-group.form-inline
						label Option 3
						input#option3.form-control.option(type='text', name='option3' required)
						label Option 4
						input#option4.form-control.option(type='text', name='option4' required)
					.form-group.text-center
						label Answer
						input#answer.form-control(type='text', name='answer' required)
					.form-group.text-center
						button#btn-SetExam.btn.btn-action(type="submit") Submit
		.row
			br
			.alert.alert-warning.alert-dismissible(role="alert")
				//- button.close(type="button" data-dismiss="alert" aria-label="Close")
				//- 	span(aria-hidden="true")
				//- 		&times;
				strong Warning! 
				|   Minimum 3 Questions per Level
