    //Modal
    #loginModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
        .modal-dialog
          .modal-content
            .modal-header
              button.close(type='button', data-dismiss='modal')
                      span(aria-hidden='true') &times;
                      span.sr-only Close
                    h4#myModalLabel.modal-title
                    .text-center Sign In
                  .modal-body
                      form#login-form
                        .form-group
                          label Email
                          //.input-group.margin-bottom-sm
                           span.input-group-addon
                            i.fa.fa-envelope-o.fa-fw
                          input.form-control.email(type='email', name='email', required)
                        .form-group
                          label Password
                          //.input-group
                           span.input-group-addon
                            i.fa.fa-key.fa-fw
                          input.form-control.password(type='password', name='password', required)
                        button#login.btn.center-block(type='submit') Sign In
                        #error-login.alert.alert-danger.hidden(role='alert')
                        hr
                      form
                        .form-login.text-center
                              a.btn.btn-facebook(href='/auth/facebook')
                                 span.fa.fa-facebook
                                 |  Facebook
                              a.btn.btn-twitter(href='/auth/twitter')
                                 span.fa.fa-twitter
                                 |  Twitter
                              a.btn.btn-google(href='/auth/google')
                                 span.fa.fa-google-plus
                                 |  Google+  
                            
                  .modal-footer
                    p.text-center
                      strong No account yet?
                      | &#x9;  
                      a(href='/signup') Sign up.

